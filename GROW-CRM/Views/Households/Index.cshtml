@model IEnumerable<GROW_CRM.Models.Household>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <input type="submit" disabled="disabled" value="Code" class="btn btn-link" />
            </th>
            <th>
                <input type="submit" disabled="disabled" value="Street #" class="btn btn-link" />
            </th>
            <th>
                <input type="submit" disabled="disabled" value="Street" class="btn btn-link" />
            </th>
            <th>
                <input type="submit" disabled="disabled" value="Apartment" class="btn btn-link" />
            </th>
            <th>
                <input type="submit" disabled="disabled" value="City" class="btn btn-link" />
            </th>
           
            <th>
                <input type="submit" disabled="disabled" value="Province" class="btn btn-link" />
            </th>

            <th>
                <input type="submit" disabled="disabled" value="Members" class="btn btn-link" />
            </th>
            <th>
                <input type="submit" disabled="disabled" value="LICO" class="btn btn-link" />
            </th>


            <th>
                <input type="submit" disabled="disabled" value="Status" class="btn btn-link" />
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HouseholdCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AptNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Province.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfMembers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LICOVerified)
            </td>


            <td>
                @Html.DisplayFor(modelItem => item.HouseholdStatus.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
